<article class="module width_full">
<header><h3>Listagem de fotos do site</h3>
<ul class="tabs">
<li>   <%= link_to 'Criar novo registro', new_admin_gallery_path, :title => "criar novo registro" %></li>

</ul></header>
<div class="module_content">
<table>
<tr>

<th width="70%">Foto</th>
<th>Visualizar</th>
<th>Editar</th>
<th>Excluir</th>
<th>Ações</th>


</tr>

<% @galleries.each do |gallery| %>
<tr>   

<td width="70%" align="center"><%= image_tag gallery.foto.url(:thumb) %></td>
<td><%= link_to 'Show', admin_gallery_path(gallery) %></td>
<td><%= link_to 'Edit', edit_admin_gallery_path(gallery) %></td>
<td><%= link_to 'Destroy', admin_gallery_path(gallery), method: :delete, data: { confirm: 'Deletar a imagem ?' } %></td>
</tr>
<% end %>
</table>

<br />
<div><%= will_paginate @galleries %></div>



</div>
<footer>
<div class="submit_link">
<%= link_to admin_root_path, :class =>"botaocancelar" do %>
Inicio <% end %>

</div>
</footer>
</article><!-- end of post new article -->


