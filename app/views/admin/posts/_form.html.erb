<article class="module width_3_quarter">
<header>
  <h3 class="tabs_involved">Cadastro de artigos</h3>
</header>

<div class="tab_container">
<div id="tab1" class="tab_content">


<%= form_for [:admin , @post] do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
<h4  class="alert_warning"><%= pluralize(@post.errors.count, "error") %> Não foi possível salvar o registro : </h4>

<ul>
<% @post.errors.full_messages.each do |msg| %>
<li>
<h4 class="alert_error"><%= msg %></h4></li>
<% end %>
</ul>
</div>
<% end %>
<fieldset>   <label>Selecione a categoria</label><br>
<%= f.collection_select(:category_id, @categories, :id, :name, :prompt => true) %>

</fieldset>

<fieldset>
<label>Título</label>
<%= f.text_field :title %>
</fieldset>
<fieldset>
<label>Autor</label>
<%= f.text_field :autor %>
</fieldset>
<fieldset>
<label>Url</label>
<%= f.text_field :url %>
</fieldset>
<fieldset>
<label>Subtitulo</label>
<%= f.text_area :subtitle %>

</fieldset>
<fieldset>
<label>Contéudo</label>
<%= f.text_area :body %>

</fieldset>

<div class="submit_link">
<%= f.submit "Salvar registro", :class =>"alt_btn" %>
<%= link_to admin_posts_path, :class =>"botaocancelar" do %>
    Cancelar
<% end %> 
</div>
<% end %>

</div><!-- end of #tab1 -->  

</div><!-- end of .tab_container -->

</article><!-- end of content manager article -->

<!-- render menudireito -->
<%= render  'admin/posts/imagens' %>

<!-- fecha render menudireito -->

<div class="clear"></div> 



