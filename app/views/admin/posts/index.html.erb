        <article class="module width_3_quarter">
        <header><h3 class="tabs_involved">LIsagem de artigos publicados</h3>
        <ul class="tabs">
            <li><%= link_to new_admin_post_path do %>
                Novo Artigo <% end %></li>
          
        </ul>
        </header>

        <div class="tab_container">
            <div id="tab1" class="tab_content">


            <table class="tablesorter" cellspacing="0"> 
            <thead> 
                <tr> 
                    <th>Data</th>
                    <th>Titulo</th> 
                  
                  
                    <th>Ações</th> 
                </tr> 
            </thead> 
            <tbody> 
                
             <% @posts.each do |c| %>
                <tr> 
                  <td><%= c.created_at.strftime("%d de %b - %y") %></td>
                    <td><%= c.title %></td> 
                   
                  
                    <td><%= link_to admin_post_path(c) do %>
                        <%= image_tag "admin/icn_search.png", :title=> "Visualizar" %><% end %>
                       
                          <%= link_to edit_admin_post_path(c) do %>
                        <%= image_tag "admin/icn_edit.png", :title=> "Visualizar" %> <% end %>
                        <%= link_to admin_post_path(c), confirm: 'Deletar arquivo, Tem certeza ?', method: :delete , :title => "Excluir arquivo"  do %>
                        <%= image_tag "admin/icn_trash.png" %> <% end %>
                        


                        </td> 
                </tr> 
               <% end %>
                 <tr><td colspan="5"><%= will_paginate @posts %></td></tr>
            </tbody> 
            </table>
            </div><!-- end of #tab1 -->
            
            
            
        </div><!-- end of .tab_container -->
        
        </article><!-- end of content manager article -->
        
      <%= render 'admin/posts/imagens' %>